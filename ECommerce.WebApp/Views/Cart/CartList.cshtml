@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, ECommerce.WebApp
@model ECommerce.WebApp.Models.ViewModel
@{
    ViewData["Title"] = "CartList";
    Layout = "~/Views/_Layout.cshtml";
}

<h1>CartList</h1>
<table  id="customers" class="table table-responsive" style="text-align:center">
    <tr>
        <td>Product Title</td>
        <td>Description</td>
        <td>Stock</td>
        <td></td>
    </tr>
    @foreach (var item in Model.Cart.CartLines)
    {

        <tr>
            <td>@item.Product.ProductTitle</td>
            <td>@item.Product.ProductDescription</td>
            <td>@item.Quantity.</td>
            <td class="text-right">
                <a class="btn btn-danger" asp-controller="Cart" asp-action="RemoveToCart" asp-route-productId="@item.Product.ProductId">Remove</a>
            </td>
        </tr>
    }
<tr>
    <td></td>
    <td></td>
    <td></td>
    <td class="text-right">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <span class="glyphicon-shopping-play"></span>Continue Shooping
        </a>
    </td>
    <td class="text-right">
        <a asp-controller="Cart" asp-action="CompleteShopping" class="btn btn-secondary">
            <span class="glyphicon-shopping-play"></span>Check Out
        </a>
    </td>
</tr>

</table>
