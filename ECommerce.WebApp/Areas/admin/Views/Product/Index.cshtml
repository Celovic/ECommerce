@model IEnumerable<ECommerce.Entities.Entities.Concrete.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Layout.cshtml";
}
<button type="button" href="/admin/Product/Add" value="Add a product" class="btn btn-info"></button>
<button type="button" href="/admin/Category/Add" value="Add a category" class="btn btn-info"></button>
<table id="customers" class="table table-responsive" style="text-align:center">
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Stock</th>
        <th>Process</th>
    </tr>
    @foreach (var item in Model)
    {
        @if (item.StockQuantity == 0)
        {
            <tr class="bg-danger">
                <td>@item.ProductTitle</td>
                <td>@item.ProductDescription</td>
                <td>@item.StockQuantity</td>
                <td>
                    <a class="btn btn-info" href="/admin/Product/Update/@item.ProductId">Update</a>
                    <a class="btn btn-danger" href="/admin/Product/Delete/@item.ProductId">Delete</a>
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>@item.ProductTitle</td>
                <td>@item.ProductDescription</td>
                <td>@item.StockQuantity</td>
                <td>
                    <a class="btn btn-info" href="/admin/Product/Update/@item.ProductId">Update</a>
                    <a class="btn btn-danger" href="/admin/Product/Delete/@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    }
</table>